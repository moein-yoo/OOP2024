<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" stylesheets="@../CSS/style.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ViewGraphic.LoginMenuViewController">
   <children>
      <PasswordField fx:id="passwordLabel" layoutX="225.0" layoutY="200.0" promptText="Your Password" />
      <TextField fx:id="usernameLabel" layoutX="226.0" layoutY="106.0" promptText="Your Username" />
      <Label layoutX="259.0" layoutY="82.0" text="Username">
         <font>
            <Font name="Courier New Bold" size="12.0" />
         </font>
      </Label>
      <Label fx:id="passwordTitle" layoutX="261.0" layoutY="178.0" text="Password" />
      <Button layoutX="268.0" layoutY="262.0" mnemonicParsing="false" onMouseClicked="#login" text="Login" />
      <Button layoutX="22.0" layoutY="327.0" mnemonicParsing="false" onMouseClicked="#signUp" text="Sign Up" />
      <Button layoutX="516.0" layoutY="327.0" mnemonicParsing="false" onMouseClicked="#quit" text="Quit" />
      <Label fx:id="messageLabel" layoutX="226.0" layoutY="359.0" />
      <Label fx:id="questionTitle" layoutX="190.0" layoutY="131.0" />
      <TextField fx:id="recoveryQuestionAnswer" layoutX="225.0" layoutY="152.0" opacity="0.0" promptText="Answer" />
      <RadioButton fx:id="radioButton" layoutX="476.0" layoutY="269.0" mnemonicParsing="false" onMouseClicked="#passWordForget" text="Password Forget" textFill="RED">
         <font>
            <Font name="Comic Sans MS" size="12.0" />
         </font>
      </RadioButton>
      <Label fx:id="timerLabel" layoutX="412.0" layoutY="204.0" />
   </children>
</AnchorPane>
